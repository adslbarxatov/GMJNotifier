<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.LogPage">

	<StackLayout>

		<Label x:Name="HeaderLabel" />

		<StackLayout Orientation="Horizontal" HorizontalOptions="Fill" >

			<StackLayout Orientation="Vertical" HorizontalOptions="Start" >
				<Button x:Name="NotificationButton" HorizontalOptions="Center" />

				<Button x:Name="ShareButton" HorizontalOptions="Center" />
				<StackLayout HorizontalOptions="Center" Orientation="Horizontal">
					<Button x:Name="ShareOffsetButton" /><!-- WidthRequest="40" HeightRequest="40" -->
					<Label x:Name="ShareOffsetLabel" VerticalOptions="Center" />
				</StackLayout>

				<Button x:Name="GetGMJ" HorizontalOptions="Center" />
			</StackLayout>

			<ScrollView>
				<StackLayout>
					<Editor x:Name="MainLog" VerticalOptions="Fill" HorizontalOptions="Fill" />
				</StackLayout>
			</ScrollView>

		</StackLayout>

	</StackLayout>
</ContentPage>
    