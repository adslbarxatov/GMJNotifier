<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.LogPage">

	<StackLayout>

		<Label x:Name="HeaderLabel" />

		<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
			<Button x:Name="LogNotification" HorizontalOptions="Center" />
			<Button x:Name="GetGMJ" HorizontalOptions="Center" />
		</StackLayout>

		<ScrollView>
			<StackLayout>
				<Editor x:Name="MainLog" VerticalOptions="Fill" HorizontalOptions="Fill" />
			</StackLayout>
		</ScrollView>
		
	</StackLayout>
</ContentPage>
    