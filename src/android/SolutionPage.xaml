<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.SolutionPage">

	<ScrollView>
		<StackLayout>
			<Label x:Name="HeaderLabel" />

			<Label x:Name="ServiceSettingsLabel" />

			<FlexLayout Direction="Row" Wrap="Wrap" >

				<StackLayout Orientation="Horizontal">
					<Switch x:Name="AllowStart" VerticalOptions="Center" />
					<Label x:Name="AllowStartLabel" VerticalOptions="CenterAndExpand" />
				</StackLayout>

				<StackLayout Orientation="Horizontal">
					<Switch x:Name="AllowSound" VerticalOptions="Center" />
					<Label x:Name="AllowSoundLabel" VerticalOptions="CenterAndExpand" />
				</StackLayout>

				<StackLayout Orientation="Horizontal">
					<Switch x:Name="AllowLight" VerticalOptions="Center" />
					<Label x:Name="AllowLightLabel" VerticalOptions="CenterAndExpand" />
				</StackLayout>

				<StackLayout Orientation="Horizontal">
					<Switch x:Name="AllowVibro" VerticalOptions="Center" />
					<Label x:Name="AllowVibroLabel" VerticalOptions="CenterAndExpand" />
				</StackLayout>

			</FlexLayout>

		</StackLayout>
	</ScrollView>
</ContentPage>
